<astro-fragment>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cafe Menu</title>
  </head>
  <style>
    @import './styles.scss';
  </style>
  <body>
    <div class="menu">
      <header>
        <h1>MALONGO CAFE</h1>
        <p class="established">Est. 2023</p>
      </header>
      <hr />
      <main>
        <section>
          <h2>Coffee</h2>
          <img src={'https://cdn.freecodecamp.org/curriculum/css-cafe/coffee.jpg'} alt="coffee icon" />
          <article class="item">
            <p class="flavor">French Vanilla</p>
            <p class="price">6.00</p>
          </article>
          <article class="item">
            <p class="flavor">Caramel Macchiato</p>
            <p class="price">6.25</p>
          </article>
          <article class="item">
            <p class="flavor">Pumpkin Spice</p>
            <p class="price">6.42</p>
          </article>
          <article class="item">
            <p class="flavor">Hazelnut</p>
            <p class="price">9.00</p>
          </article>
          <article class="item">
            <p class="flavor">Mocha</p>
            <p class="price">9.42</p>
          </article>
        </section>
        <section>
          <h2>Desserts</h2>
          <img src={'https://cdn.freecodecamp.org/curriculum/css-cafe/pie.jpg'} alt="pie icon" />
          <article class="item">
            <p class="dessert">Donut</p>
            <p class="price">1.42</p>
          </article>
          <article class="item">
            <p class="dessert">Cherry Pie</p>
            <p class="price">2.25</p>
          </article>
          <article class="item">
            <p class="dessert">Cheesecake</p>
            <p class="price">6.00</p>
          </article>
          <article class="item">
            <p class="dessert">Cinnamon Roll</p>
            <p class="price">2.42</p>
          </article>
        </section>
      </main>
      <hr class="bottom-line" />
      <footer>
        <p class="address">42 FCC Drive</p>
      </footer>
      <h5>&copy; Copyright 10 Aug 2023, Nuoxoxo & Co.</h5>
    </div>
  </body>
</astro-fragment>




